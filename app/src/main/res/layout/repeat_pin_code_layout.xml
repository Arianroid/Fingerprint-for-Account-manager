<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/repeatPinCodeTitleTxt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|top"
        android:layout_weight="2"
        android:gravity="center"
        android:maxLines="3"
        android:padding="40dp"
        android:text="لطفا مجددا پین کد خود را وارد نمایید ."
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etRepeatPinCodeFirstTxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="#" />

        <EditText
            android:id="@+id/etRepeatPinCodeSecondTxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="#" />

        <EditText
            android:id="@+id/etRepeatPinCodeThirdTxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="#" />

        <EditText
            android:id="@+id/etRepeatPinCodeFourthTxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="#" />
    </LinearLayout>

    <Button
        android:id="@+id/repeatPinCodeSaveBtn"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="onClick"
        android:text="ذخیره" />


</LinearLayout>