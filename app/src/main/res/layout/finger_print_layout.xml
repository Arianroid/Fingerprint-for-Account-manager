<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">

        <ImageView
            android:id="@+id/alertRedIconImg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_alert_red"
            android:visibility="invisible"
            tools:visibility="invisible" />


        <TextView
            android:id="@+id/fingerPrintTitleTxt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            android:layout_gravity="top"
            android:text="برای تنظیم ورود به اپلیکیشن از طریق اثر انگشت، انگشت خود را بروی سنسور گوشی قرار دهید ."
            android:layout_weight="2"
            android:gravity="center|right|top"
            android:maxLines="3"
            android:textSize="18sp" />


        <ImageView
            android:id="@+id/fingerPrintIconImg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1.2"
            android:src="@drawable/ic_finger"
            android:visibility="visible" />

        <Button
            android:id="@+id/fingerPrintCancelBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="50dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="نمی خواهم" />

    </LinearLayout>

</RelativeLayout>